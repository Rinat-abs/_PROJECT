<%- include('./blocks/head.ejs')%>
<%- include('./blocks/navbar.ejs')%>

<div class="container">
    <div class="container"> 

        <a class="btn_left" href="/plan"
            style="width: 70px; text-align: center; margin-left: 20px;  color: #fff;">
            Назад
        </a>
      
        <a class="btn_left animate__animated" href="/plan/add_pharmacy"
            style="width: 160px; text-align: center; margin-left: 20px;  color: #fff;">
            Добавить аптеку
        </a>

        <%if(!pharmacies.length) {%>
            <div class="error">
                Здесь пока пусто
            </div>
        <%} else {%>
            <input type="text" class="input__search" placeholder="Поиск " style="margin-left: 20px;">
            <div style="max-height: 550px; overflow: auto;">
                <table class="table_dark" id="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Полное наименование</th>
            
                        </tr>
                    </thead>
                    
                    <tbody >
                        <%pharmacies.forEach((pharmacy, i) => {%>
                            <tr class="search__item">
                                <td><%=pharmacy.num%></td>
                                <td><a href="#" style="color: #fff; text-decoration: underline;"><%=pharmacy.full_name%></a></td>
                            </tr>
        
                        <%})%>
                    </tbody>
                   
                   
        
        
                </table>
            </div>
        <%}%>

     

    </div>
</div>

<script src='/sorts/tablesort.min.js'></script>


<script src='/sorts/tablesort.number.min.js'></script>
<script src='/sorts/tablesort.date.min.js'></script>
<script>
    new Tablesort(document.getElementById('table'), {
        descending: true
    });
    
</script>



<script src="/js/search.js"></script>

