<%- include('./blocks/head.ejs')%>
<%- include('./blocks/navbar.ejs')%>


    <div class="container">
        <a class="btn_left" href="/plan/current_month" style="width: 70px; text-align: center; margin-left: 20px;  color: #fff;">
            Назад
        </a>
        <div class="confirm_data">
            План продаж
        </div>
        <%
            if(error.length)
            {
                %>
                <div    class="modal" id="modal">
                    <div class="modal__content">
                        <button class="modal__close-button" id="modal__close-button"><img src="/img/close.svg" width="18" alt=""></button>
              
                        <h1 class="modal__title">Возникла ошибка</h1>
                        <p class="modal__description"> <%-error%>   
                        </p>
                    </div>
                </div>
                    <script src="/js/modal.js"></script>    
                <%
            }
        %> 

            <form action="/plan" method="post" 
                class="plan__form"
                enctype="multipart/form-data"
            >
            <label for="test" class="plan__form__label">Выберите Excel файл </label>
                                
            <input type="file" name="test" id="test" class="plan__form__file"  required >
            
     
            <button class="btn_left" type="submit">Сохранить</button>
            </form>

            

    
    </div>


<%- include('./blocks/footer.ejs')%>