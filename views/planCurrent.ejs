<%- include('./blocks/head.ejs')%>
<%- include('./blocks/navbar.ejs')%>
 

    <div class="container">
        <a class="btn_left" href="/plan" style="width: 70px; text-align: center; margin-left: 20px;  color: #fff;">
            Назад
        </a>

        <a class="btn_left" href="/plan/upload" style="width: 100px; text-align: center; margin-left: 20px;  color: #fff;">
            Загрузить
        </a>
        
        <%if(!items.length) {%>
            <div class="error">
                План не загружен
            </div>
        <%} else {%>
            <input type="text" class="input__search" placeholder="Поиск " style="margin-left: 20px;">
            <%if(success.length){%>
                <div class="success">
                   <%=success%>
                </div>    
            <%}%>
            <div class="confirm_data">
                План за текущий месяц
            </div>
            <br>

            <div  style="max-height: 510px; overflow: auto;">
                <table class="table_dark" tabindex="0">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Аптека</th>
                            <th>План</th>
                        </tr> 
                    </thead>
                    <tbody>
                        <%items.forEach((item, i) => {%>
                            <tr class="search__item">
                                <td><%=++i%></td>
                                <td>
                                    <%=item.short_name%>
                                    
                                </td>
                                <td class="table__price">
                                  
                                    <span class="price"> <%=item.plan%></span>
                                    <input type="hidden" value="<%=item.plan%>" name="price" class="input_no_arrows"  required>
                                    <button class="btn_small_table save_price hidden" data-id="<%=item.id%>" data-plan="<%=item.plan%>" >&#10004;</button>
                                    <img src="/img/edit.png" alt="Редактировать" class="table__price__img" >
                                    
                                </td>
                            
                            </tr>
                        <%})%>
                    </tbody>
        
                   
                    
                </table>
            </div>
        <%}%>
        

               

        
    </div>

    <%
    if( error.length > 0)
    {
        %>
        
            <div class="small_fadeout_block small_fadeout_block_error animate__animated animate__backInDown">
                <button class="modal__close-button" id="modal__close-button"><img src="/img/close.svg" width="14" alt=""></button>
                <h3>Ошибка</h3>
                <p><%-error%> </p>
            </div>
            <script src="/js/smallWindow.js"></script>  
        <%
    }
    %> 
    
    <script src="/js/editPlan.js"></script>

    <script src="/js/search.js"></script>

<%- include('./blocks/footer.ejs')%>